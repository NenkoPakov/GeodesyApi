<!-- NEWS -->
<section class="news">
    <span class="section-title"><a asp-route="NumberOfNewsPages" title="">Новини и събития</a></span>

    <div class="articles">

        @foreach (var news in @Model.News)
        {
            <article>
                <div class="news-icon">
                    <img src="~/img/icons/news-list.svg" alt="" title="">
                </div>
                <div class="article-title">
                    <a asp-controller="News" asp-action="Details" asp-route-id="@news.Id" title="">@news.Title</a><br>
                    <span><time datetime=" @news.CreatedOn.ToString("o")"></time></span>
                </div>
            </article>
        }
    </div>
</section><!-- NEWS -->
