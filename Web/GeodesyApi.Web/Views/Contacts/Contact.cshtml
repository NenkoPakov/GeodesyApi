                </div>
            </div>

            <div class="contacts-other">
                <form method="post" asp-controller="Contacts" asp-action="Contact" enctype="multipart/form-data">
                    <h3>За връзка с нас</h3>

                    <div>
                        <label asp-for="@Model.Name"></label>
                        <input asp-for="@Model.Name" class="input" />
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="@Model.Email"></label>
                        <input asp-for="@Model.Email" class="input" />
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="@Model.Message"></label>
                        <textarea asp-for="@Model.Message" rows="7" cols="35"></textarea>
                        <span asp-validation-for="@Model.Message" class="text-danger"></span>
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-primary" id="submitComment">Изпрати</button>
                </form>

