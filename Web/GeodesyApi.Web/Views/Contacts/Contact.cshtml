@model GeodesyApi.Web.ViewModels.Contacts.ContactViewModel
@{
    this.ViewData["Title"] = "Contact Page";
}

<section class="page contacts">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.3.1/css/ol.css" type="text/css">
    <script src="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.3.1/build/ol.js"></script>

    <div id="map" class="map" style="height: 400px;width: 100%;"></div>
    <script src="~/js/Contacts/Map.js" type="text/javascript"></script>

    <div class="inner-wrapper ">
        <h1><img src="~/img/icons/contacts-nav.svg" alt="" title=""> Контакт</h1>
        <div class="contacts-container">
