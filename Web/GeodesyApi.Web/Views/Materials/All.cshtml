<!-- PAGE -->
<section class="page materials">
    <aside>
        <h1><img src="img/icons/mats.svg" alt="" title=""> Дисциплини и материали</h1>
        <a href="#" id="show" class="show-nav">&#9776;</a>
        <div class="sidebar-nav" id="pushleft">
            <a href="#" id="hide" class="hide-nav">&times;</a>
            <!-- inner nav-->
            <ul class="cd-accordion-menu animated">
                <li><a href="#" title="">Материали за лекции</a></li>
                <li><a href="#" title="">Материали за упражнения</a></li>
                <li><a href="#" title="">Материали за тестове</a></li>
                <li><a href="#" title="">Изисквания за заверка</a></li>
            </ul><!-- inner nav-->
        </div>


    </aside>
    <div class="content">
        <div class="main">
            <div class="search">
                <form action="#" method="post">
                    <input type="search" name="search-field" class="search-field" placeholder="Въведете параметри за търсене...">
                    <input type="submit" name="search-button" class="search-button" value="">
                </form>
            </div>

            <h2>Последни материали</h2>


            @foreach (var material in @Model.Materials)
            {
                <!-- .list -->
                <div class="list">
                    <a href="#" title="" class="status">
                        <h4>@material.Title</h4>
                        <h5>Категория: <em>@material.Category</em></h5>
                        <p>@material.ShortDescription</p>
                    </a>

                    <div class="buttons_list">
                        <a href="#" title="">виж повече</a>
                        <a href="#" title="">сваляне</a>

                        <!-- If current user is author of this material -->
                        <a href="#" title="" class="reg_u">изтриване</a>
                        <a href="#" title="" class="reg_u">редактиране</a>
                    </div>

                </div><!-- .list -->
            }



            <!-- .pagination -->
            <div class="pagination">
                <a href="#">&larr;</a>
                <a href="#">1</a>
                <strong>2</strong>
                <a href="#">3</a>
                ...
                <a href="#">10</a>
                <a href="#">&rarr;</a>
            </div><!-- .pagination -->


        </div>

        <div class="show-selected">
            <a href="#" title="Към всички материали" class="close">&times; Към всички материали</a>
            <div class="right-column2">
                <div class="map">
                    <iframe src="Test Document.pdf" style="width:100%; height:80vh;"></iframe>

                    <a href="#" title="">сваляне</a>
                </div>
            </div>
        </div>
    </div>
</section><!-- PAGE -->


<script src="js/jquery.min.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {


        /* the Responsive menu script */
        $('body').addClass('js');
        var $menu = $('#menu'),
            $menulink = $('.menu-link'),
            $menuTrigger = $('.has-subnav > a');

        $menulink.click(function (e) {
            e.preventDefault();
            $menulink.toggleClass('active');
            $menu.toggleClass('active');
        });

        var add_toggle_links = function () {
            if ($('.menu-link').is(":visible")) {
                if ($(".toggle-link").length > 0) {
                }
                else {
                    $('.has-subnav > a').before('<span class="toggle-link"> Open submenu </span>');
                    $('.toggle-link').click(function (e) {
                        var $this = $(this);
                        $this.toggleClass('active').siblings('ul').toggleClass('active');
                    });
                }
            }
            else {
                $('.toggle-link').empty();
            }
        }
        add_toggle_links();
        $(window).bind("resize", add_toggle_links);

    });
</script>

<script>


    $(document).ready(function () {
        var pageWidth = $(window).width();

        $("#hide").click(function () {
            $("#pushleft").removeClass('newClass');
        });
        $("#show").click(function () {
            $("#pushleft").addClass('newClass');
        });
    });
</script>
