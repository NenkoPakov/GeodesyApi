@model  GeodesyApi.Web.ViewModels.Materials.GetAllMaterialsViewModel
<!-- PAGE -->
<section class="page materials">
    <aside>
        <h1><img src="img/icons/mats.svg" alt="" title=""> Дисциплини и материали</h1>
        <a href="#" id="show" class="show-nav">&#9776;</a>
        <div class="sidebar-nav" id="pushleft">
            <a href="#" id="hide" class="hide-nav">&times;</a>

            <!-- inner nav-->
            <ul class="cd-accordion-menu animated">
                <li><a asp-route="NumberOfMaterialsPages" asp-route-category="Lab" title="">Материали за лекции</a></li>
                <li><a asp-route="NumberOfMaterialsPages" asp-route-category="Exercise" title="">Материали за упражнения</a></li>
                <li><a asp-route="NumberOfMaterialsPages" asp-route-category="Test" title="">Материали за тестове   </a></li>
                <li><a asp-route="NumberOfMaterialsPages" asp-route-category="CertificationRequirements" title="">Изисквания за заверка  </a></li>
                <li><a asp-route="NumberOfMaterialsPages" asp-route-category="Publication" title="">Публикации</a></li>
                <li><a asp-route="NumberOfMaterialsPages" asp-route-category="Questionnaire" title="">Конспект</a></li>
                <li><a asp-route="NumberOfMaterialsPages" asp-route-category="Information" title="">Информация</a></li>
                <li><a asp-route="NumberOfMaterialsPages" asp-route-category="Coursework" title="">Курсови задачи</a></li>
                <li><a asp-route="NumberOfMaterialsPages" asp-route-category="Others" title="">Други</a></li>
                <li><a asp-route="NumberOfMaterialsPages" title="">Всички</a></li>

            </ul><!-- inner nav-->
        </div>


    </aside>
    <div class="content">
        <div class="main">
            <div class="search">
                <form action="#" method="post">
                    <input type="search" name="search-field" class="search-field" placeholder="Въведете параметри за търсене...">
                    <input type="submit" name="search-button" class="search-button" value="">
                </form>
            </div>

            <h2>Последни материали</h2>


            @foreach (var material in Model.Materials)
            {
                <!-- .list -->
                <div class="list">
                    <a href="#" title="" class="status">
                        <h4>@material.Title</h4>
                        <h5>Категория: <em>@material.Category</em></h5>
                        <p>@material.ShortDescription</p>
                    </a>

                    <div class="buttons_list">
                        <a href="#" title="">виж повече</a>
                        <a href="#" title="">сваляне</a>

                        <!-- If current user is author of this material -->
                        <a href="#" title="" class="reg_u">изтриване</a>
                        <a href="#" title="" class="reg_u">редактиране</a>
                    </div>

                </div><!-- .list -->
            }



            <!-- .pagination -->
            <nav>
                <ul class="pagination justify-content-center">
                    @if (this.Model.CurrentPage == 1)
                    {
                        <li class="page-item disabled">
                            <a class="page-link" href="#">Previous</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-route="NumberOfMaterialsPages"
                               asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
                        </li>
                    }

                    @for (int i = 1; i <= this.Model.PagesCount; i++)
                    {
                        var active = i == this.Model.CurrentPage ? "active" : string.Empty;
                        <li class="page-item @active">
                            <a class="page-link"
                               asp-route="NumberOfMaterialsPages"
                               asp-route-page="@i">@i</a>
                        </li>
                    }

                    @if (this.Model.CurrentPage == this.Model.PagesCount)
                    {
                        <li class="page-item disabled">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-route="NumberOfMaterialsPages"
                               asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
                        </li>
                    }
                </ul>
            </nav>
            <!-- .pagination -->


        </div>

        <div class="show-selected">
            <a href="#" title="Към всички материали" class="close">&times; Към всички материали</a>
            <div class="right-column2">
                <div class="map">
                    <iframe src="Test Document.pdf" style="width:100%; height:80vh;"></iframe>

                    <a href="#" title="">сваляне</a>
                </div>
            </div>
        </div>
    </div>
</section><!-- PAGE -->


<script src="js/jquery.min.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {


        /* the Responsive menu script */
        $('body').addClass('js');
        var $menu = $('#menu'),
            $menulink = $('.menu-link'),
            $menuTrigger = $('.has-subnav > a');

        $menulink.click(function (e) {
            e.preventDefault();
            $menulink.toggleClass('active');
            $menu.toggleClass('active');
        });

        var add_toggle_links = function () {
            if ($('.menu-link').is(":visible")) {
                if ($(".toggle-link").length > 0) {
                }
                else {
                    $('.has-subnav > a').before('<span class="toggle-link"> Open submenu </span>');
                    $('.toggle-link').click(function (e) {
                        var $this = $(this);
                        $this.toggleClass('active').siblings('ul').toggleClass('active');
                    });
                }
            }
            else {
                $('.toggle-link').empty();
            }
        }
        add_toggle_links();
        $(window).bind("resize", add_toggle_links);

    });
</script>

<script>


    $(document).ready(function () {
        var pageWidth = $(window).width();

        $("#hide").click(function () {
            $("#pushleft").removeClass('newClass');
        });
        $("#show").click(function () {
            $("#pushleft").addClass('newClass');
        });
    });
</script>
