@model GeodesyApi.Web.ViewModels.Materials.MaterialEditViewModel

@using GeodesyApi.Data.Models.Enums


@{
    this.ViewData["Title"] = "Privacy Policy";
}


<!-- PAGE -->
<section class="page materials">
    <aside>
        <a asp-route="NumberOfMaterialsPages" style="text-align:center"><h1><img src="~/img/icons/mats.svg" alt="" title=""> Редактиране на<br />дисциплини<br />и<br />материали<</h1></a>
        <a href="#" id="show" class="show-nav">&#9776;</a>
        <div class="sidebar-nav" id="pushleft">
            <a href="#" id="hide" class="hide-nav">&times;</a>
        </div>
    </aside>

    <div class="content">
        <div class="main">
            <div class="col-md-6 offset-md-3 mt-5">

                <form asp-controller="Materials" asp-action="Upload" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"><b>Заглавие</b></label>
                        <input asp-for="Title" class="control-label" type="text" placeholder="Въведи заглавие" required>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div>
                        <label class="control-label" asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label" asp-for="Category"></label>
                        <label asp-for="Category" class="control-label"><b>Категория</b>@Html.DropDownListFor(x => x.Category, @Html.GetEnumSelectList(typeof(GeodesyApi.Data.Models.Enums.MaterialsType)), new { @class = "form-control" })</label>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <hr>
                    <div class="form-group mt-3">
                        <label class="control-label" asp-for="Files"></label>
                        <input asp-for="Files" type="file" name="files" value="other" multiple>
                        <span asp-validation-for="Files" class="text-danger"></span>
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-primary">Запази промените</button>
                </form>
            </div>
        </div>
    </div>
</section><!-- PAGE -->


<script src="~/js/jquery.min.js" type="text/javascript"></script>
